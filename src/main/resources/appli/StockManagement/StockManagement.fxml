
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.hospital.controller.StockManagementController">
    <HBox spacing="10">
        <TextField fx:id="libelleField" promptText="Libellé"/>
        <TextField fx:id="descriptionField" promptText="Description"/>
        <ComboBox fx:id="niveauDangerositeComboBox" promptText="Niveau de dangerosité"/>
        <TextField fx:id="quantiteField" promptText="Quantité"/>
        <ComboBox fx:id="fournisseurComboBox" promptText="Fournisseur"/>
        <Button text="Ajouter Produit" onAction="#addProduit"/>
    </HBox>
    <TableView fx:id="produitTable">
        <columns>
            <TableColumn text="Libellé" fx:id="libelleColumn"/>
            <TableColumn text="Description" fx:id="descriptionColumn"/>
            <TableColumn text="Niveau de dangerosité" fx:id="niveauDangerositeColumn"/>
            <TableColumn text="Quantité" fx:id="quantiteColumn"/>
            <TableColumn text="Fournisseur" fx:id="fournisseurColumn"/>
        </columns>
    </TableView>
</VBox>

